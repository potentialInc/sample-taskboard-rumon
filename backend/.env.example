# ============================================
# TaskBoard - Environment Configuration
# ============================================
# Copy this file to .env and fill in values

# ──────────────────────────────────────────────
# Server Configuration
# ──────────────────────────────────────────────
PORT=3000
MODE=DEV
# Comma-separated list of allowed origins for CORS
ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
FRONTEND_URL=http://localhost:5173
ADMIN_DASHBOARD_URL=http://localhost:5174

# ──────────────────────────────────────────────
# Database Configuration (PostgreSQL)
# ──────────────────────────────────────────────
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=taskboard

# ──────────────────────────────────────────────
# JWT Authentication
# ──────────────────────────────────────────────
AUTH_JWT_SECRET="your-strong-secret-key-min-32-chars"
AUTH_TOKEN_COOKIE_NAME="TaskBoardAccessToken"
AUTH_TOKEN_EXPIRED_TIME=86400
AUTH_TOKEN_EXPIRED_TIME_REMEMBER_ME=2592000
AUTH_REFRESH_TOKEN_COOKIE_NAME="TaskBoardRefreshToken"
AUTH_REFRESH_TOKEN_EXPIRED_TIME=604800

# ──────────────────────────────────────────────
# Google OAuth
# ──────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ──────────────────────────────────────────────
# AWS S3 Configuration (File Storage)
# ──────────────────────────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=taskboard-uploads
AWS_REGION=us-east-1

# ──────────────────────────────────────────────
# Email Configuration
# ──────────────────────────────────────────────
# Option 1: SendGrid (recommended for production)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@taskboard.com

# Option 2: Gmail/Nodemailer (fallback, used when SENDGRID_API_KEY is empty)
MAIL_PORT=587
MAIL_HOST=smtp.gmail.com
MAIL_FROM=dev@example.com
GOOGLE_CLIENT_REFRESH_TOKEN=
GOOGLE_CLIENT_ACCESS_TOKEN=

# ──────────────────────────────────────────────
# Redis Configuration (Caching / WebSocket adapter)
# ──────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ──────────────────────────────────────────────
# Apple Sign-In (optional)
# ──────────────────────────────────────────────
APPLE_TEAM_ID=demo-apple-team-id
APPLE_CLIENT_ID=demo-apple-client-id
APPLE_KEY_ID=demo-apple-key-id
APPLE_PRIVATE_KEY=demo-apple-private-key

# ──────────────────────────────────────────────
# Push Notifications (Firebase)
# ──────────────────────────────────────────────
PROJECT_ID=
PRIVATE_KEY_ID=
PRIVATE_KEY=
CLIENT_EMAIL=
