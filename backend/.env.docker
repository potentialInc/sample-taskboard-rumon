# Docker Environment Variables
# Copy this to .env for local Docker development

# Application
NODE_ENV=development
PORT=3000
MODE=DEV
ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
FRONTEND_URL=http://localhost:5173

# Database (PostgreSQL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=12345
POSTGRES_DATABASE=nestjs-starter-kit

# JWT Configuration
AUTH_JWT_SECRET=pRojEct2025_nestjs_starter_kit
AUTH_TOKEN_COOKIE_NAME=NestjsStartKit
AUTH_TOKEN_EXPIRED_TIME=86400
AUTH_TOKEN_EXPIRED_TIME_REMEMBER_ME=2592000
AUTH_REFRESH_TOKEN_COOKIE_NAME=StarterRefreshToken
AUTH_REFRESH_TOKEN_EXPIRED_TIME=604800

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_FROM=dev@potentialai.com

# AWS S3 (if using)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Other configurations
APP_URL=http://localhost:3000
